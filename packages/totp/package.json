{
  "name": "@otplib/totp",
  "version": "13.0.2",
  "description": "RFC 6238 TOTP implementation for otplib",
  "license": "MIT",
  "author": "Gerald Yeo <support@yeojz.dev>",
  "homepage": "https://otplib.yeojz.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yeojz/otplib.git",
    "directory": "packages/totp"
  },
  "bugs": {
    "url": "https://github.com/yeojz/otplib/issues"
  },
  "keywords": [
    "otp",
    "totp",
    "rfc6238",
    "2fa",
    "mfa",
    "time-based",
    "one-time-password"
  ],
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:ci": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "clean": "rm -rf dist .tsbuildinfo"
  },
  "dependencies": {
    "@otplib/core": "workspace:*",
    "@otplib/hotp": "workspace:*",
    "@otplib/uri": "workspace:*"
  },
  "devDependencies": {
    "@otplib/plugin-crypto-node": "workspace:*",
    "@repo/testing": "workspace:*",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^4.0.16"
  },
  "publishConfig": {
    "access": "public"
  }
}

{
  "name": "@otplib/plugin-crypto-node",
  "version": "13.2.1",
  "description": "Node.js crypto module adapter for otplib",
  "license": "MIT",
  "author": "Gerald Yeo <support@yeojz.dev>",
  "homepage": "https://otplib.yeojz.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yeojz/otplib.git",
    "directory": "packages/plugin-crypto-node"
  },
  "bugs": {
    "url": "https://github.com/yeojz/otplib/issues"
  },
  "keywords": [
    "otp",
    "crypto",
    "nodejs",
    "hmac",
    "plugin"
  ],
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:ci": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "clean": "rm -rf dist .tsbuildinfo"
  },
  "dependencies": {
    "@otplib/core": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "publishConfig": {
    "access": "public"
  }
}

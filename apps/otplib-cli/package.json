{
  "name": "otplib-cli",
  "version": "1.0.0",
  "description": "CLI tool for managing encrypted OTP vaults",
  "license": "MIT",
  "author": "Gerald Yeo <support@yeojz.dev>",
  "type": "module",
  "bin": {
    "otplib": "./dist/index.cjs",
    "otplibx": "./dist/otplibx.cjs"
  },
  "main": "./dist/index.cjs",
  "files": [
    "dist",
    "bin"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yeojz/otplib.git",
    "directory": "apps/otplib-cli"
  },
  "keywords": [
    "otp",
    "totp",
    "hotp",
    "2fa",
    "cli",
    "vault"

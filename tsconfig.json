{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@builds/*": ["packages/otplib-*/builds"],
      "@otplib/*": ["packages/otplib-*"],
      "@tests/*": ["tests/*"]
    }
  },
  "exclude": ["node_modules", "packages/**/build", "configs", "website"]
}

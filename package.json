{
  "name": "otplib-smoke-test",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Smoke tests for published otplib packages",
  "scripts": {
    "install:packages": "bash install-packages.sh",
    "test:esm": "node --test test/*.test.js && tsx --test test/*.test.ts",
    "test:cjs": "node --test test/*.test.cjs",
    "test:all": "tsx --test --test-reporter=spec --test-reporter-destination=stdout --test-reporter=./junit-reporter.js --test-reporter-destination=report.xml test/*.test.js test/*.test.cjs test/*.test.ts",
    "test:typecheck": "tsc --noEmit -p ."
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@8.14.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}

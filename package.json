{
  "name": "otplib-smoke-test",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Smoke tests for published otplib packages",
  "scripts": {
    "install:packages": "bash install-packages.sh",
    "test": "node --test test/*.test.js && tsx --test test/*.test.ts",
    "test:typecheck": "tsc --noEmit -p ."
  },
  "dependencies": {
    "@otplib/core": "*",
    "@otplib/hotp": "*",
    "@otplib/plugin-base32-scure": "*",
    "@otplib/plugin-crypto-noble": "*",
    "@otplib/plugin-crypto-node": "*",
    "@otplib/totp": "*",
    "@otplib/uri": "*",
    "otplib": "*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@8.14.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
